<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@drawable/mbg"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Interactive Learning"
        android:titleTextColor="#FFFFFF"
        android:contentDescription="Toolbar" />

    <!-- Main content layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Your existing layout here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--    Top Part      -->
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:background="@drawable/topbg">
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/mkids"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kids All in One"
                    android:textSize="28sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="cursive"
                    android:textFontWeight="900"/>


                <ImageView
                    android:id="@+id/menuId"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/rounded_background"
                    android:elevation="8dp"
                    android:src="@drawable/menu" />


            </LinearLayout>


            <!--    Body Part     -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">


                <!--    Body Main Layout -->

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_below="@+id/ll1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--  Now we need 6 more layout inside of Main Layout    -->

                    <!--        1st       -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/alphabets"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/alphabets"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Alphabets"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/numbers"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/numbers"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Numbers"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!--        2nd       -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/days"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/days"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Days Name"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/months"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/months"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Months Name"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!--        3rd       -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/birds"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/birds"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Birds"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/animals"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/animals"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Animals"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!--        4th       -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/fruits"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/fruits"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Fruits"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/crops"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/crops"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Crops"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!--        5th       -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/flowers"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/flowers"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Flowers"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/organs"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/organs"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Organs"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!--        6th = Quiz-1       -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:paddingBottom="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quiz"
                            android:layout_width="320dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="6dp"
                            app:cardBackgroundColor="#ffff00"
                            android:layout_margin="12dp">

                            <TextView
                                android:id="@+id/quizText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="QUIZ-1"
                                android:textColor="#FFFFFF"
                                android:textSize="30sp"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/quizbg"
                                android:layout_gravity="center"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                                android:textStyle="bold" />



                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <!--        7th = Quiz-2       -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:paddingBottom="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quiz2"
                            android:layout_width="320dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="6dp"
                            app:cardBackgroundColor="#ffff00"
                            android:layout_margin="12dp">

                            <TextView
                                android:id="@+id/quiz2Text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="QUIZ-2"
                                android:textColor="#FFFFFF"
                                android:textSize="30sp"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/quizbg"
                                android:layout_gravity="center"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                                android:textStyle="bold" />



                        </androidx.cardview.widget.CardView>

                    </LinearLayout>






                </LinearLayout>

            </ScrollView>



        </LinearLayout>

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
