<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/backFromResetPassword"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/back_button"
            android:layout_marginBottom="20dp"
            android:layout_gravity="start"/>


        <!-- Logo or Header Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/signup_logo"
            android:layout_marginBottom="20dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/passwordResetHeaderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Reset"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="10dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click Reset Password in to continue"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="20dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/passwordResetEmailEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:background="@drawable/rounded_input_bg"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:layout_marginBottom="15dp" />


        <!-- Sign-In Button -->
        <Button
            android:id="@+id/passwordResetButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:text="Reset Password"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:padding="15dp" />



        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressbarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>
